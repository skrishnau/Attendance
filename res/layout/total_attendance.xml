<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingRight="8dp">
    <TextView
        android:id="@+id/tvClassInfo"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:gravity="left"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:layout_weight="2"
        android:paddingRight="10dp"
        android:text="class info"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/genReportBt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:background="@drawable/blue_drawable" />

</LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        
        <LinearLayout 
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:paddingTop="4dp"
         android:paddingBottom="4dp"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:background="@color/blue_for_page_background" >

        <Button
            android:id="@+id/takeAttendanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:background="@drawable/blue_drawable"
            android:onClick="TakeAttandance"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Take Attendance"
            
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/dateTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/addNewStudentButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:background="@drawable/blue_drawable"
            android:text="Add Students"
             android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@android:color/black"
            android:typeface="monospace"
            android:textSize="15sp"
            android:onClick="AddNewStudent" />

        </LinearLayout>
    </LinearLayout>
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    
<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:longClickable="true" 
        android:background="@color/DarkBlue" >
        
    <TextView
        android:id="@+id/tvC"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="0.5dp"
        android:layout_weight="2.90"
        android:paddingLeft="5dp"
        android:text="Crn"
         android:paddingTop="6dp "
        android:paddingBottom="2dp"
        android:layout_marginTop="0.5dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvP"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/blue_small_drawable"
        android:gravity="center"
        
        android:paddingBottom="1dp"
        android:paddingLeft="2dp"
        android:paddingTop="1dp "
        android:text=" In days â†“ "
        android:textColor="@color/white"
        android:textSize="12sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tvN"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_toLeftOf="@+id/tvP"
        android:layout_toRightOf="@+id/tvC"
        android:layout_weight="21.38"
        android:paddingTop="6dp "
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:typeface="serif" />

    </RelativeLayout>
    <ListView
        android:id="@+id/avgAttdlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_weight="0.87"
        android:scrollbars="vertical" 
        android:background="@color/LT_GRAY_LIGHT"
        >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smokeWhite" >

        <TextView
            android:id="@+id/totalClasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.55"
            android:paddingLeft="8dp"
            android:background="@color/blue_for_page_background"
            android:text="Total Class Days"
            android:textStyle="italic"
            android:typeface="serif" />
        <!--
        <Button
            android:id="@+id/addAttd"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:background="@drawable/whitebutton"
            android:gravity="center"
            android:onClick="addAttendanceDay"
            android:text="Take Attendance"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:typeface="monospace" />
        -->
    </LinearLayout>

</LinearLayout>